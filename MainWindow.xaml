                        <Button Content="Button" HorizontalAlignment="Left" Margin="12,0,0,0" VerticalAlignment="Top" Width="500"/>
                    </WrapPanel>
                </ScrollViewer>
            </Grid>

        </StackPanel>

        <StackPanel Grid.Column="1"  Grid.Row="0">
            <Label Content="Label" HorizontalAlignment="Left" Margin="144,37,0,0"  VerticalAlignment="Top" RenderTransformOrigin="0.519,0.56"/>
            <TextBox HorizontalAlignment="Left" Margin="10,41,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsTabStop="False"/>
            <ListBox Margin="5,35,5,43" SelectionMode="Multiple">
                <Label Background="LightGreen" Content="Tétel vagyok" Width="243"/>
            </ListBox>
        </StackPanel>

        <StackPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal">
            <Button Content="Fizetve" Margin="10,10,10,10"/>
